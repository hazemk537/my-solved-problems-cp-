vector<long long>data2;
void prefix_sum(ll size_vector,vector<ll>&data)
{
    prefix[0]=data[0];
    fr1(i,size_vector)
    {
        prefix[i]=data[i]+prefix[i-1];
    }
}
ordered_set os;
int main()
{

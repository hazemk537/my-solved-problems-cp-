    int n;
    cin>>n;
    int ans=0;
    vector<int>data(n);
    fr(i,n)
    {
        cin>>data[i];
    }
    for(int i=0; i<=n-3;)
    {
        if(data[i]==1&&data[i+1]==0&&data[i+2]==1)
        {
            ans++;
            i=i+2;
        }
        i++;
    }

    cout<<ans;
